# Cell 1: Imports and loading results
import arviz as az
import matplotlib.pyplot as plt

trace = az.from_netcdf('../results/binary_system_trace.nc')

# Cell 2: Plotting posterior for population hyperparameters
az.plot_posterior(trace, var_names=['mu_m1', 'mu_m2', 'mu_chi_eff'])
plt.show()

# Cell 3: Plotting inferred vs. mock values for first 10 binaries
import numpy as np

m1_obs = trace.posterior['m1'].mean(dim=['chain', 'draw']).values[:10]
m2_obs = trace.posterior['m2'].mean(dim=['chain', 'draw']).values[:10]

plt.scatter(m1_obs, m2_obs, label='Inferred')
plt.xlabel('m1')
plt.ylabel('m2')
plt.title('Inferred (mean posterior) values for 10 binaries')
plt.legend()
plt.show()
